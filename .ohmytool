# ================================ Business Helper Functions ================================

# Download file with status
# Usage: download_file "url" "output_path" "description"
download_file() {
    local url="$1"
    local output="$2"
    local description="${3:-Downloading file}"

    print_step "$description"
    if curl -s "$url" -o "$output"; then
        print_success "$description completed"
        return 0
    else
        print_error "$description failed"
        return 1
    fi
}

# Start docker compose service
# Usage: start_docker_compose "service_name" "port"
start_docker_compose() {
    local service_name="$1"
    local port="${2:-}"

    print_step "Starting ${service_name}"
    if docker-compose up -d; then
        print_success "${service_name} started successfully!"
        if [ -n "$port" ]; then
            print_info "Access via: http://localhost:${port}"
        fi
        return 0
    else
        print_error "Failed to start ${service_name}"
        return 1
    fi
}

