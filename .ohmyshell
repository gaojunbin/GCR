            read yyon
            if [ "${yyon}" = "y" ];then
                echo -e "$ sudo chown -R ${owner} ${dir}"
                sudo chown -R ${owner} ${dir}
            else
                echo -e "$ chown -R ${owner} ${dir}"
                chown -R ${owner} ${dir}
            fi
        fi
    else
        echo -e 'Invalid direcctory!'
    fi
}

