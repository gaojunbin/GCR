    echo -e 'input you choose: \c'
    read func_num
    if [ "${func_num}" = 1 ];then
        gpu
    elif [ "${func_num}" = 2 ];then
        nvidia
    elif [ "${func_num}" = 3 ];then
        pid
    elif [ "${func_num}" = 4 ];then
        echo 'CUDA_VISIBLE_DEVICES'
    else
        echo -e 'Invalid Input!'
    fi
}
