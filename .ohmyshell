    shell_file=~/.zshrc
    precmd () { echo -n "\x1b]1337;CurrentDir=$(pwd)\x07" }
elif [[ "$SHELL" == *"bash" ]];then
    shell_file=~/.bashrc
    export PS1="$PS1\[\e]1337;CurrentDir="'$(pwd)\a\]'
else
    echo 'Invalid shell type: ' $SHELL
